#!/bin/sh
# Create symbolic includes
#--------------------------------------------#
echo "==> Linking includes in mesh/"
cd mesh
wmakeLnInclude -f .

echo "==> Linking includes in math/"
cd ../math
wmakeLnInclude -f .

echo "==> Linking includes in DGFoam/"
cd ../DGFoam
wmakeLnInclude -f .

echo "==> Linking includes in DGMethod/"
cd ../DGMethod
wmakeLnInclude -f .
#--------------------------------------------#

# Build math library
echo "==> Building libDGMath from math/"
cd ../math
wmake libso

# Build mesh library
echo "==> Building libDGMesh from mesh/"
cd ../mesh
wmake libso

# Build DGFoam library
echo "==> Building libDGFoam from DGFoam/"
cd ../DGFoam
wmake libso

# Build DGMethod library
echo "==> Building libDGMethod from DGMethod/"
cd ../DGMethod
wmake libso

# Build thermophysicalModels library
echo "==> Building libDGFluidThermophysicalModels from thermophysicalModels/"
cd ../thermophysicalModels
wmake libso
#------------------------------------------------------------------------------
